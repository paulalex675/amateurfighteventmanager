
<%= simple_form_for [hostable, Address.new] do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs p-10 flex-col flex-wrap">
    <%= f.input :address1, input_html: { class: "frm" } %>
    <%= f.input :address2, input_html: { class: "frm" } %>
    <%= f.input :town_or_city, input_html: { class: "frm" } %>
    <%= f.input :county, input_html: { class: "frm" } %>
    <%= f.input :post_code, input_html: { class: "frm" } %>
    <%= f.input :country, priority: ["United Kingdom"], input_html: { class: "frm" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn post" %>
  </div>
<% end %>
