
<div class="bg-gray-700 flex flex-col justify-end rounded-lg p-6 border-white border-2">
  <div class="flex flex-col shadow my-4 bg-transparent border-green-700 space-y-1">
    <div>
      <div class="bg-gray-900 flex flex-col justify-start p-6 rounded-lg shadow-2xl">
        <p class="text-xl pb-4">
          <strong>Name:</strong>
          <%= link_to "#{fight_profile.user.first_name}" + " " + "#{fight_profile.user.last_name}", fight_profile_path(fight_profile) %>
        </p>

        <p class="text-xl pb-4">
          <strong>Ring name:</strong>
          <%= fight_profile.ring_name %>
        </p>

        <p class="text-xl pb-4">
          <strong>Style:</strong>
          <%= fight_profile.style %>
        </p>

        <p class="text-xl pb-4">
          <strong>Gym:</strong>
          <%= fight_profile.gym.name %>
        </p>

        <p class="text-xl pb-4">
          <strong>Gender:</strong>
          <% if fight_profile.gender == '1' %>
            Male
          <% else %>
            Female 
          <% end %>
        </p>

        <p class="text-xl pb-4">
          <strong>Fight weight:</strong>
          <%= fight_profile.fight_weight %>
        </p>
      </div>
    </div>
  </div>
</div>
