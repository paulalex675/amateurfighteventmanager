
<%= simple_form_for(@fight_profile) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs p-10 flex-col flex-wrap items-center space-y-2 ">
    <%= f.input :ring_name, input_html: { class: "frm" } %>
    <%= f.input :style_id, collection: Style.all, input_html: { class: "frm" } %>
    <%= f.input :gym_id, collection: Gym.all, prompt: "Which gym are you fighting out of?", input_html: { class: "frm" }   %>
    <%= f.input :gender, as: :radio_buttons, collection: [['0', 'female'], ['1', 'male']], label_method: :second, value_method: :first %>
    <%= f.input :fight_weight, prompt: "Please enter your weight in Kg", input_html: { class: "frm" }   %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class:"btn post" %>
  </div>
<% end %>
