
<%= simple_form_for(@fight_profile) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :ring_name %>
    <%= f.input :style %>
    <%= f.input :gym_id, collection: Gym.all, prompt: "Which gym are you fighting out of?" %>
    <%= f.input :gender, as: :radio_buttons, collection: [['0', 'female'], ['1', 'male']], label_method: :second, value_method: :first %>
    <%= f.input :fight_weight, prompt: "Please enter your weight in Kg" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
