<p id="notice"><%= notice %></p>



    <h1 class="text-3xl font-bold pt-8 lg:pt-0"> Gyms </h1>

      <table>
        <thead>
          <tr>
            <th>Owner</th>
            <th>Name</th>
            <th>Primary style</th>
            <th>Email</th>
            <th>Website</th>
            <th>Telephone</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @gyms.each do |gym| %>
            <tr>
              <td><%= gym.user.first_name + " " + gym.user.last_name %></td>
              <td><%= gym.name %></td><br/>
              <td><%= gym.primary_style %></td>
              <td><%= gym.email %></td>
              <td><%= gym.website %></td>
              <td><%= gym.telephone %></td>
              <td><%= link_to 'Show', gym %></td>
              <% if gym.user == current_user %>
                <td><%= link_to 'Edit', edit_gym_path(gym) %></td>
                <td><%= link_to 'Destroy', gym, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Gym', new_gym_path %>
 