
<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.file_field :avatar %>
    <%= f.input :first_name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "first_name", class: "text-area bg-gray-500 rounded-lg" } %>
    <%= f.input :last_name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "last_name", class: "text-area bg-gray-500 rounded-lg" } %>
    <%= f.input :username,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "username", class: "text-area bg-gray-500 rounded-lg" } %>
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email", class: "text-area bg-gray-500 rounded-lg" }%>
    <%= f.input :bio,
                autofocus: true,
                input_html: { autocomplete: "say something about yourself", class: "text-area bg-gray-500 rounded-lg" } %>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password", class: "text-area bg-gray-500 rounded-lg" } %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password", class: "text-area bg-gray-500 rounded-lg" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up", class: "btn post" %>
  </div>
<% end %>
<%= render "users/shared/links" %>